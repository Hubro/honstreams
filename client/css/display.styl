@import 'config'

.honsapp > .display
	position absolute
	top 0px
	right 0px
	bottom 0px
	left sidebar_size

	background-color cyan

	> .embed
		position absolute
		top 0
		right chatbox_size
		bottom 0
		left 0

		background-color pink

		> object
			width 100%
			height 100%
	
	> .chat
		position absolute
		top 0
		right 0
		bottom 0
		width chatbox_size

		background-color black

		> iframe
			width 100%
			height 100%
