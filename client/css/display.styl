.honsapp > .display
	position absolute
	top 0px
	right 0px
	bottom 0px
	left sidebar_size

	overflow hidden

	//
	// STYLES FOR DISPLAY_PAGE
	//
	> .page_wrapper
		abspos(0, 0, 0, 0)
		background-color #ddd
		user_select(text)
		cursor auto
	
		> .page
			width 640px

			margin 25px auto

	//
	// STYLES FOR DISPLAY_STREAM
	//
	> .header
		position absolute
		top 0
		right 0
		left 0
		height streamheader_size

		background-color #000
		td_gradient(#333, #000)
		color #ddd

		> .channel-title, > .stream-title
			margin 10px
		
		> .viewers
			margin 10px

			position absolute
			top 0
			right 0
			text-align right
		
			> span
				font-weight bold
		
		> .featured
			margin 10px
			position absolute
			top 48px
			right 0
		
		> .toolbar
			button_height = 30px
			button_padding = 8px

			position absolute
			bottom 10px
			left 10px
			height button_height

			> .button
				display inline-block
				margin-right 5px

				background-color #666
				td_gradient(#666, #444)
				border_radius(3px)

				cursor pointer

				padding button_padding
				height button_height - button_padding * 2

				&:hover
					background-color #777
					td_gradient(#777, #555)
				
				&:active
					box-shadow inset 0px 5px 5px rgba(0, 0, 0, 0.25)
					

	> .jtv_wrapper
		position absolute
		top streamheader_size
		right 0
		bottom 0
		left 0
		overflow hidden

		// Style if stream is not displayed
		&.no-chat
			> .embed
				right 0px
			> .chat
				visibility hidden

		> .embed
			abspos(0, chatbox_size, 0, 0)

			background-color black

			> object
				width 100%
				height 100%
		
		> .chat
			position absolute
			top 0
			right 0
			bottom 0
			width chatbox_size

			background-color black

			> .reloadbtn
				padding 5px
				margin 10px 10px 0px 10px
				background-color lime
				cursor pointer
				text-align center
			
			> .wrapper > iframe
				width 100%
				height 100%
