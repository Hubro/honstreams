@import 'config'

.honsapp > .display
	position absolute
	top 0px
	right 0px
	bottom 0px
	left sidebar_size

	overflow hidden

	background-color cyan

	//
	// STYLES FOR DISPLAY_PAGE
	//
	> .page
		width 640px

		margin 25px auto

	//
	// STYLES FOR DISPLAY_STREAM
	//
	> .header
		position absolute
		top 0
		right 0
		left 0
		height streamheader_size

		background-color violet

	> .jtv_wrapper
		position absolute
		top streamheader_size
		right 0
		bottom 0
		left 0
		overflow hidden

		> .embed
			abspos(0, chatbox_size, 0, 0)

			// Style if stream is not displayed
			&.no-chat
				right 0

			background-color black

			> object
				width 100%
				height 100%
		
		> .chat
			position absolute
			top 0
			right 0
			bottom 0
			width chatbox_size

			background-color black

			> iframe
				width 100%
				height 100%
