@import 'config'

.honsapp > .sidebar
	position absolute
	left 0
	top 0
	bottom 0
	width sidebar_size

	background-color blue

	> .streams
		background-color green

		> .stream
			position relative
			height 40px
			background-color orange
			color black
			margin-bottom 5px
			overflow hidden

			> .image
				width 40px
				height 40px
			
			> .title
				white-space nowrap
				position absolute
				top 3px
				left 45px

			> .viewers
				position absolute
				bottom 3px
				left 45px
				color black + #555
