.honsapp > .sidebar
	position absolute
	left 0
	top 0
	bottom 0
	width sidebar_size

	overflow hidden

	background-color lightblue

	> .header
		position relative
		height 50px

		> .logo
			position relative
			top 5px
			left 5px
			width 40px
			height 40px
			
			background-color black
			color white
		
		> .link
			position absolute
			top 15px
			left 60px
	
	> .streams-info
		height 50px

		background-color red
			
	> .streams
		position absolute
		top 100px
		left 0px
		bottom 0px
		width sidebar_size

		background-color green

		.stream
			position relative
			height 40px
			background-color orange
			color black
			margin-bottom 5px
			width sidebar_size

			> .image
				width 53px
				height 40px
				background-size 100%
			
			> .title
				white-space nowrap
				position absolute
				top 3px
				left 58px

			> .viewers
				position absolute
				bottom 3px
				left 58px
				color black + #555

		// Scrollbar plugin styles
		> #sidebar_streams_container
			abspos(0, 0, 0, 0)
		
			> .customScrollBox
				abspos(0, 0, 0, 0)
				overflow hidden

				> .container
					position relative
					top 0
		
			> .dragger_container
				position absolute
				top 5px
				right 5px
				bottom 5px
				width 10px
				opacity 0.5

				&:hover
					opacity 0.7
			
				> .dragger
					position absolute
					width 10px
					height 100px
					cursor pointer
					background-color #000
				
				> .dragger_pressed
					position absolute
					width 10px
					height 100px
					cursor pointer
					background-color #555
